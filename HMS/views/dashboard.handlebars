<div class="row">
    <div class="col-lg-4 col-md-4 info-box">
        <div class="panel panel-primary">
            <div class="panel-heading" id="patientsInRooms">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-hotel fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div id="patients-with-rooms-live" class="huge"></div>
                        <div>Patients with rooms</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-4 info-box">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-child fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div id="patients-waiting-live" class="huge"></div>
                        <div>Patients waiting</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-4 info-box">
        <div class="panel panel-orange">
            <div class="panel-heading" id="freeRooms">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-hospital-o fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div id="free-rooms-live" class="huge"></div>
                        <div>Free rooms</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Table with patients in rooms-->
<div class="col-lg-12 col-md-12 table-view">
    <p style="font-size: large; font-weight:bold;">Assigned Patients</p>
	<table id="patients-in-hospital" class="table table-striped table-bordered" cellspacing="0" width="100%"></table>
    <div class="tooltip-style">
        <img src="/images/info.png" id="info" alt="Info">
        <span class="tooltiptext">
            To assign patients, click on patient and then click on room and save changes.
        </span>
    </div>
</div>

<!-- Table with patients waiting to get a room-->
<div class="col-lg-12 col-md-12 table-view">
    <p style="font-size: large; font-weight:bold;">Waiting Patients</p>
    <table id="patients-waiting" class="table table-striped table-bordered" cellspacing="0" width="100%"></table>
    <div class="tooltip-style">
        <img src="/images/info.png" id="info" alt="Info">
        <span class="tooltiptext">
            Double click on patients' name to View/Update their details.
        </span>
    </div>
</div>

<!-- Table with free rooms-->
<div class="col-lg-12 col-md-12 table-view">
    <p style="font-size: large; font-weight:bold;">Available Rooms</p>
    <table id="free-rooms" class="table table-striped table-bordered" cellspacing="0" width="100%"></table>
    <div class="tooltip-style">
        <img src="/images/info.png" id="info" alt="Info">
        <span class="tooltiptext">
            Assigned rooms will be delisted from here.
        </span>
    </div>
</div>


